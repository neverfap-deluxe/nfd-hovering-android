<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".MainActivity">

    <LinearLayout
            android:layout_margin="@dimen/view_layout_margin"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/fragment_about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="About Hovering"

                android:textSize="40sp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:lineSpacingExtra="6sp"
        />

        <TextView
                android:id="@+id/fragment_about_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="Hovering is a meditation technique."
        />

        <TextView
                android:id="@+id/fragment_about_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="It has been designed to be easy to understand, simple to practice, as well as remain acessible to people of all ages."
        />

        <TextView
                android:id="@+id/fragment_about_text_21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="You can learn more about how to practice Hovering on the official website:"
        />

        <TextView
                android:id="@+id/fragment_about_text_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"
                android:onClick="onClickWebsiteLink"

                android:text="https://tryhovering.com/"
                android:textColor="#00FFFF"/>


        <TextView
                android:id="@+id/fragment_about_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="It explains in great detail the purpose and rationale of practicing Hovering."
        />

        <TextView
                android:id="@+id/fragment_about_text_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="Sincerely,"
        />

        <TextView
                android:id="@+id/fragment_about_text_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="60dp"
                android:textSize="20sp"
                android:lineSpacingExtra="2sp"

                android:text="Daddy Reade"
        />

    </LinearLayout>

</ScrollView>

