<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/hover_text_update"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintVertical_bias="0.3"
            android:textSize="20sp"

            tools:text="1 minute"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <Button
            android:id="@+id/hover_button"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:textColor="#fff"

            android:background="@drawable/nfd_hover_button_drawable"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:text="Hover"
    />

    <TextView
            android:id="@+id/hover_text_instructions"
            
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            app:layout_constraintVertical_bias="0.74"

            android:textSize="16sp"
            android:textAlignment="center"

            android:text="Hold the button down to begin your session."

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

    <TextView
            android:id="@+id/hover_text_instructions_two"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            app:layout_constraintVertical_bias="0.88"

            android:textSize="12sp"
            android:textAlignment="center"

            android:text="We recommend hovering for 10 minutes at a time, and the app will provide you with reminders of the time throughout your session."

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:lineSpacingExtra="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>